        "react-icons": "^4.2.0",
        "size-limit": "^4.10.2",
        "tsdx": "^0.14.1",
        "tslib": "^2.2.0",
        "typescript": "^3.9.9"
    },
    "dependencies": {
        "react-beautiful-dnd": "^13.1.0",
        "uuid": "^3.4.0"
